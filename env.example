# CLG CRM Environment Variables
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/clg-db

# Session Security (REQUIRED - Change this to a strong random string)
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Auth0 Configuration (REQUIRED)
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=your-api-identifier

# Admin Configuration (REQUIRED)
ADMIN_EMAIL=admin@yourcompany.com

# Google Calendar API (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5050/calendar-callback

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5050
# For Railway deployment, use: https://your-app-name.railway.app

# Railway specific
RAILWAY_PUBLIC_DOMAIN=https://your-app-name.railway.app

# Node Environment
NODE_ENV=development

# Security Settings
# Rate limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session timeout (in milliseconds)
SESSION_TIMEOUT=86400000

# File upload limits
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info
